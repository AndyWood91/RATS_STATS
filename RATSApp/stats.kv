#:import Toolbar kivymd.toolbar.Toolbar
#:import ThemeManager kivymd.theming.ThemeManager


BoxLayout:
    orientation: 'vertical'
    Toolbar:
        id: toolbar
        title: 'RATS App - Now Beautiful'
        md_bg_color: app.theme_cls.primary_color
        background_palette: 'Primary'
        background_hue: '500'

    RatsScreenManager:
        id:rsm
        orientation: 'vertical'

        # Screen: <name>
        MenuScreen: # 'menu'
        ConfirmInputScreen: # 'confirm_input'
        ChooseStatsScreen: # 'choose_stats'
        ReadScreen: # 'read_stats'
        ExportScreen: # 'config_menu'
        PlayBreakScreen: # 'play_break_screen'
        TeamSelectScreen: # 'team_select'
        SelectOffenceScreen: # 'select_offence'
        SelectPlayersScreen: # 'select_players'
        PullingScreen: # 'pulling'
        SelectActionScreen: # 'select_action'

# <> makes it a rule
<Separator@Widget>:
    size_hint_y: None
    height: dp(6)
    color: 1, 1, 1, 1
    background_image: ''

    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background_image

<ConfirmInputScreen>
    name:'confirm_input'
    BoxLayout:
        orientation:'vertical'
        padding:[40,40,40,40]
        spacing:20
        id:MainLayout

        Label:
            text:'Ready to take ratstats for:'
            font_size: 30
        MDLabel:
            id:content_disp
            size_hint_y: None
            #text_size: self.width, None
            text_style:'Body1'
        BoxLayout:
            orientation:'horizontal'
            padding:[40,40,40,40]
            spacing:20

            Button:
                text:'Continue'
                font_size: 30
                on_release:root.conf_input()
            Button:
                text:'Back'
                font_size: 30
                on_release:root.go_back()

<MenuScreen>
    name:'menu'



    BoxLayout:
        orientation:'vertical'
        padding:[40,40,40,40]
        spacing:20
        size_hint:(1,1)
        MDLabel:
            # i don't know why but i can't seem to resize this
            # how is self.size being worked out
            # it's too big for the menu imo

            #canvas.before:
            #    Color:
            #        rgba: 1, 0, 0, 1  # red
            #    Rectangle:
            #        pos: self.pos
            #        size: self.size
            font_style:'Title'
            theme_text_color:'Primary'
            text:'Construct Your Life'
            halign:'center'
        MDRaisedButton:
            text:'Take New Stats'
            pos_hint: {'center_x':0.5}#,'center_y':0.6}
            #size_hint_x: 0.5 # this causes Critical Clock max_iteration warning
            on_release:root.goto_confirm_input()
        MDRaisedButton:
            text:'Continue Old Stats'
            pos_hint: {'center_x':0.5}
            on_release:root.goto_continue_stats()

        MDRaisedButton:
            text:'Check Readout'
            pos_hint: {'center_x':0.5}
            #on_release:root.goto_read_stats()

        MDRaisedButton:
            text:'Exit'
            pos_hint:{'center_x':0.5}
            on_release:app.get_running_app().stop()

<ChooseStatsScreen>
    name:'choose_stats'
    BoxLayout:
        orientation:'vertical'
        padding:[40,40,40,40]
        spacing:20
        id:BigBox

        #Label:

<ReadScreen>
    name:'read_stats'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:5
        id:BigBox
        orientation:'vertical'


<ExportScreen>
    name:'config_menu'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:20
        id:BigBox
        orientation:'vertical'
        Label:
            id:content_disp
            size_hint_y: None
            text_size: self.width, None

<PlayBreakScreen>
    name:'play_break_screen'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:20
        id:BigBox
        orientation:'vertical'

<TeamSelectScreen>
    name:'team_select'
    BoxLayout:
        padding:[40,40,40,40]
        spacing:20
        id:BigBox
        orientation:'horizontal'
        #TODO: work out how to change filechooser theme
        # this black background is bc default font is white
        # kivyMD doesn't seem to have a filechooser widget

        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

        FileChooserListView:
            id:filechA
            path:root.teamlistpath
            size_hint_x:0.5

        FileChooserListView:
            id:filechB
            path:root.teamlistpath
            size_hint_x:0.5

    BoxLayout:
        orientation:'horizontal'
        padding:[40,40,40,40]
        spacing:20
        MDRaisedButton:
            text:'Confirm Teams'
            on_release:root.conf_selec()
        MDRaisedButton:
            text:'Back'
            on_release:root.go_back()

<SelectOffenceScreen>
    name:'select_offence'
    BoxLayout:
        orientation:'vertical'
        padding:[40,40,40,40]
        spacing:20
        id:SOBox
        MDLabel:
            text:'Which team is on offence:'
            font_style: 'Title'

<SelectPlayersScreen>
    name:'select_players'
    BoxLayout:
        id:BiggerBox
        orientation:'vertical'
        spacing:0
        MDLabel:
            text:'Who is on the line:'
            font_style:'Title'
            size_hint:[1,1]
        #this isn't centred like i'd imagine
        #whatever
        MDLabel:
            id:subtitle
            # this should display the number of selected players
            font_style:'Subhead'
            size_hint:[0.5,0.5]
        MDRaisedButton:
            text:'confirm lines'
            on_release:root.store_players()
        BoxLayout:
            size_hint:[1,10]
            id:BigBox
            orientation:'horizontal'
            BoxLayout:
                id:LeftBox
                orientation:'vertical'
                padding:[40,40,40,40]
            BoxLayout:
                id:RightBox
                orientation:'vertical'
                padding:[40,40,40,40]

<PullingScreen>
    name:'pulling'
    BoxLayout:
        id:BiggerBox
        orientation:'vertical'
        spacing:0
        Label:
            text:'What was the pull:'
            font_size:20
            size_hint:[1,1]
        #this isn't centred like i'd imagine
        #whatever
        Label:
            text:'Available players left, Available actions right'
            font_size:15
            size_hint:[0.5,0.5]

        BoxLayout:
            size_hint:[1,10]
            id:BigBox
            orientation:'horizontal'
            BoxLayout:
                id:LeftBox
                orientation:'vertical'
                padding:[40,40,40,40]
            BoxLayout:
                id:RightBox
                orientation:'vertical'
                padding:[40,40,40,40]

<SelectActionScreen>
    name:'select_action'
    BoxLayout:
        id:BiggerBox
        orientation:'vertical'
        spacing:0
        Label:
            text:'Select Player, then Action. Event will be stored when you select Action'
            font_size:20
            size_hint:[1,1]
        Label:
            text:'Last Three Events:'
            font_size:15
            size_hint:[0.5,0.5]
        Label:
            id:SequenceLabel
            # text:'No Sequence Loaded'
            font_size:15
            # size_hint:[1,0.5]

        BoxLayout:
            size_hint:[1,10]
            id:BigBox
            orientation:'horizontal'
            BoxLayout:
            # StackLayout:
                id:LeftBox
                orientation:'vertical'
                # orientation:'lr-tb'
                padding:[40,40,40,40]
            BoxLayout:
                id:RightBox
                orientation:'vertical'
                padding:[40,40,40,40]
